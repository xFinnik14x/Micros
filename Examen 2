 
#include "p16F887.inc"   ; TODO INSERT CONFIG CODE HERE USING CONFIG BITS GENERATOR
 	__CONFIG	_CONFIG1,	_INTRC_OSC_NOCLKOUT & _WDT_OFF & _PWRTE_OFF & _MCLRE_ON & _CP_OFF & _CPD_OFF & _BOR_OFF & _IESO_ON & _FCMEN_ON & _LVP_OFF 
 	__CONFIG	_CONFIG2,	_BOR40V & _WRT_OFF

RES_VECT  CODE    0x0000            ; processor reset vector
    GOTO    START                   ; go to beginning of program

    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
  
    GOTO    START

MAIN_PROG CODE                      ; let linker place main program

START

miPassword1 EQU 0x20
miPassword2 EQU 0x21
miPassword3 EQU 0x22
miPassword4 EQU 0x23
miPassword5 EQU 0x24
miPassword6 EQU 0x25
miPassword7 EQU 0x26
miPassword8 EQU 0x27 

passwordUsuario1 EQU 0x32
passwordUsuario2 EQU 0x33
passwordUsuario3 EQU 0x34
passwordUsuario4 EQU 0x35
passwordUsuario5 EQU 0x36
passwordUsuario6 EQU 0x37
passwordUsuario7 EQU 0x38
passwordUsuario8 EQU 0x39  
 
i equ 0x30
j equ 0x31
 
bandera1 equ 0x40
bandera2 equ 0x41

START

    BANKSEL PORTA ;
    CLRF PORTA ;Init PORTA
    BANKSEL ANSEL ;
    CLRF ANSEL ;digital I/O
    CLRF ANSELH
    BANKSEL TRISA ;
    MOVLW d'0'
    MOVWF TRISA 
    CLRF TRISB
    CLRF TRISC
    CLRF TRISD
    CLRF TRISE
    BCF STATUS,RP1
    BCF STATUS,RP0
    BCF PORTC,1
    BCF PORTC,0
    
INITLCD
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    
INICIO	
   
    clrf passwordUsuario1
    clrf passwordUsuario2
    clrf passwordUsuario3
    clrf passwordUsuario4
    clrf passwordUsuario5
    clrf passwordUsuario6
    clrf passwordUsuario7
    clrf passwordUsuario8
    
    
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0x80		;LCD position
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL tiempo1

    MOVLW 'M'
    MOVWF PORTD
    CALL exec
    MOVLW 'I'
    MOVWF PORTD
    CALL exec
    MOVLW 'C'
    MOVWF PORTD
    CALL exec
    MOVLW 'L'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'V'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW ':'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0xC0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL tiempo1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW b'00110101'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110101'
    MOVWF miPassword1
    MOVLW b'00110101'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110101'
    MOVWF miPassword2
    MOVLW b'00110001'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110001'
    MOVWF miPassword3
    MOVLW b'00110100'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110100'
    MOVWF miPassword4
    MOVLW b'00110110'
    MOVWF PORTD
    CALL exec
    MOVLW b'00110110'
    MOVWF miPassword5
    MOVLW b'00111001'
    MOVWF PORTD
    CALL exec
    MOVLW b'00111001'
    MOVWF miPassword6
    MOVLW b'00111000'
    MOVWF PORTD
    CALL exec
    MOVLW b'00111000'
    MOVWF miPassword7
    MOVLW b'00111000'
    MOVWF PORTD
    CALL exec
    MOVLW b'00111000'
    MOVWF miPassword8
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0x90		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL tiempo1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    MOVLW 'I'
    MOVWF PORTD
    CALL exec
    MOVLW 'N'
    MOVWF PORTD
    CALL exec
    MOVLW 'G'
    MOVWF PORTD
    CALL exec
    MOVLW 'R'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW 'S'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'C'
    MOVWF PORTD
    CALL exec
    MOVLW 'L'
    MOVWF PORTD
    CALL exec
    MOVLW 'A'
    MOVWF PORTD
    CALL exec
    MOVLW 'V'
    MOVWF PORTD
    CALL exec
    MOVLW 'E'
    MOVWF PORTD
    CALL exec
    MOVLW ':'
    MOVWF PORTD
    CALL exec
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0xD0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL tiempo1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario1
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario2
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario3
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario4
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario5
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario6
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario7
    CALL IngresaUsuario
    movf bandera1,0
    movwf passwordUsuario8
    call tiempo2
    
    CALL ChecarClave
    
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0x81		;LCD position
    MOVWF PORTD
    CALL exec
    
    
        
    GOTO INICIO

IngresaUsuario
    BSF PORTA,6
    BSF PORTA,5
    BSF PORTA,4
    BSF PORTA,3
    BSF PORTA,2
    BSF PORTA,1
    BSF PORTA,0
    
    movlw d'0'
    movwf bandera2
    
    BCF PORTA,0
    BTFSS PORTA,4
    CALL n1
    BTFSS PORTA,5
    CALL n2
    BTFSS PORTA,6
    CALL n3
    CALL tiempo1
    BSF PORTA,0
    
    BCF PORTA,1
    BTFSS PORTA,4
    CALL n4
    BTFSS PORTA,5
    CALL n5
    BTFSS PORTA,6
    CALL n6
    CALL tiempo1
    BSF PORTA,1
    
    BCF PORTA,2
    BTFSS PORTA,4
    CALL n7
    BTFSS PORTA,5
    CALL n8
    BTFSS PORTA,6
    CALL n9
    CALL tiempo1
    BSF PORTA,2
    
    BCF PORTA,3
    BTFSS PORTA,4
    CALL regresar
    BTFSS PORTA,5
    CALL n0
    BTFSS PORTA,6
    CALL entrar
    CALL tiempo1
    BCF PORTA,3
    
    MOVLW d'1'
    SUBWF bandera2,0
    BTFSC STATUS,Z
    RETURN
    GOTO IngresaUsuario
    
n1
    CALL C4
    MOVLW '1'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n2
    CALL C5
    MOVLW '2'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    RETURN
n3
    CALL C6
    MOVLW '3'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n4
    CALL C4
    MOVLW '4'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n5
    CALL C5
    MOVLW '5'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n6
    CALL C6
    MOVLW '6'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n7
    CALL C4
    MOVLW '7'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n8
    CALL C5
    MOVLW '8'    
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n9
    CALL C6
    MOVLW '9'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
regresar
    CALL C4
    MOVLW '*'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
n0
    CALL C5
    MOVLW '0'
    MOVWF bandera1
    MOVWF PORTD
    CALL exec
    CALL tiempo2
    MOVLW d'1'
    MOVWF bandera2
    return
entrar
    CALL ChecarClave
    RETURN
    
exec
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    RETURN
    
tiempo1
    CLRF i
    MOVLW d'10'
    MOVWF j
ciclo1    
    MOVLW d'80'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO ciclo1
    RETURN

tiempo2
    CLRF i
    MOVLW d'25'
    MOVWF j
ciclo2
    MOVLW d'25'
    MOVWF i
    DECFSZ i
    GOTO $-1
    DECFSZ j
    GOTO ciclo2
    RETURN
C4
    btfss   PORTA,4      
    goto    C4
    return
C5
    btfss   PORTA,5      
    goto    C5
    return
C6
    btfss   PORTA,6      
    goto    C6
    return
ChecarClave	movf	miPassword1, 0		
		subwf	passwordUsuario1, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword2, 0		
		subwf	passwordUsuario2, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword3, 0		
		subwf	passwordUsuario3, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword4, 0		
		subwf	passwordUsuario4, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword5, 0		
		subwf	passwordUsuario5, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword6, 0		
		subwf	passwordUsuario6, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword7, 0		
		subwf	passwordUsuario7, 0
		btfss	STATUS, Z
		goto	comparacion
		movf	miPassword8, 0		
		subwf	passwordUsuario8, 0
		btfss	STATUS, Z
		goto	comparacion
		goto	esIgual
		
comparacion
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
	esDiferente
	BCF PORTC,0		;command mode
	CALL tiempo1

	MOVLW 0x80		;LCD position
	MOVWF PORTD
	CALL exec

	BSF PORTC,0		;data mode
	CALL tiempo1

	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'L'
	MOVWF PORTD
	CALL exec
	MOVLW 'A'
	MOVWF PORTD
	CALL exec
	MOVLW 'V'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
	MOVLW 'I'
	MOVWF PORTD
	CALL exec
	MOVLW 'N'
	MOVWF PORTD
	CALL exec
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'O'
	MOVWF PORTD
	CALL exec
	MOVLW 'R'
	MOVWF PORTD
	CALL exec
	MOVLW 'R'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'T'
	MOVWF PORTD
	CALL exec
	MOVLW 'A'
	MOVWF PORTD
	CALL exec
    GOTO esDiferente
esIgual
    BCF PORTC,0		;reset
    MOVLW 0x01
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x0C		;first line
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    
    MOVLW 0x3C		;cursor mode
    MOVWF PORTD
    
    BSF PORTC,1		;exec
    CALL tiempo1
    BCF PORTC,1
    CALL tiempo1
    Iguales
    
	    BCF PORTC,0		;command mode
	    CALL tiempo1

	    MOVLW 0x80		;LCD position
	    MOVWF PORTD
	    CALL exec

	    BSF PORTC,0		;data mode
	    CALL tiempo1
	    
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'L'
	MOVWF PORTD
	CALL exec
	MOVLW 'A'
	MOVWF PORTD
	CALL exec
	MOVLW 'V'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
    
	;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    BCF PORTC,0		;command mode
    CALL tiempo1
    
    MOVLW 0xC0		;LCD position 
    MOVWF PORTD
    CALL exec
    
    BSF PORTC,0		;data mode
    CALL tiempo1
    ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'O'
	MOVWF PORTD
	CALL exec
	MOVLW 'R'
	MOVWF PORTD
	CALL exec
	MOVLW 'R'
	MOVWF PORTD
	CALL exec
	MOVLW 'E'
	MOVWF PORTD
	CALL exec
	MOVLW 'C'
	MOVWF PORTD
	CALL exec
	MOVLW 'T'
	MOVWF PORTD
	CALL exec
	MOVLW 'A'
	MOVWF PORTD
	CALL exec

    GOTO Iguales
		
